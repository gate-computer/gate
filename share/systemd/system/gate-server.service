[Unit]
Description=Gate server

[Service]
Type=notify
NotifyAccess=main
LimitNOFILE=1048576
AmbientCapabilities=CAP_DAC_OVERRIDE CAP_NET_BIND_SERVICE CAP_SETGID CAP_SETUID CAP_SYS_ADMIN
User=gate-server
Group=gate-server
ExecStart=/usr/local/bin/gate-server -o runtime.container.cgroup.executor=gate-executor.scope
Restart=on-failure
RestartPreventExitStatus=2

[Install]
WantedBy=network-online.target
